<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_night_butt_sheet</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_height</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>

    <style name="BottomSheetHandle">
        <item name="android:layout_width">@dimen/width_low</item>
        <item name="android:layout_height">@dimen/hight_veryLow</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/item_margin_low</item>
        <item name="android:background">@drawable/shape_night_handle</item>
    </style>

    <style name="TitleBottomSheet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_low</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
    </style>

    <style name="MenuLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black_m</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStart">5dp</item>
        <item name="android:background">@color/black_m</item>
    </style>

    <style name="StyleBackButton">
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:backgroundTint">@color/black_m</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="icon">@drawable/backarrow_24x24</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="StyleToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart_low</item>
        <item name="android:background">@color/black_m</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/high_text</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
    </style>

    <style name="StyleSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingTop">@dimen/padding_top_low</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="StyleMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black_m</item>
        <item name="android:gravity">fill</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">@dimen/padding_top_low</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingEnd">@dimen/after_item</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="RootLayoutTracksRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/black_m</item>
    </style>

    <style name="TrackNameInTracksRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/item_paddingTop_low</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlaylistStringInRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/hight_veryLow</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black_m</item>
        <item name="android:textSize">@dimen/bottom_nav_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistNameInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="ImagePointInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/item_paddingTop_VeryLow</item>
        <item name="android:src">@drawable/icpoint_13x13</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TimeInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="ArrowInTracksRecycler">
        <item name="android:layout_width">@dimen/icon_small_size</item>
        <item name="android:layout_height">@dimen/icon_small_size</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_medium</item>
        <item name="android:layout_marginEnd">@dimen/item_marginEnd_low</item>
        <item name="android:src">@drawable/arrow_24x24</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="NoFoundImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_found_white</item>
        <item name="android:contentDescription">@string/description_placeholder</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_veryHigh</item>
    </style>

    <style name="PlaceholderTextSearchActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/text_placeholder_marginTop</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart_medium</item>
        <item name="android:layout_marginEnd">@dimen/item_marginEnd_medium</item>
    </style>

    <style name="PlaceholderTextMediaEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/text_placeholder_marginTop</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart_medium</item>
        <item name="android:layout_marginEnd">@dimen/item_marginEnd_medium</item>
    </style>

    <style name="NoConnectImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_connect_white</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_veryHigh</item>
    </style>

    <style name="ButtonMedium" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/radius_button_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_low</item>
        <item name="android:paddingEnd">@dimen/padding_low</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_high</item>
        <item name="android:layout_marginBottom">@dimen/item_marginBottom_low</item>
        <item name="android:textSize">@dimen/button_text_low</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleHistorySearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_history_search</item>
    </style>

    <style name="CurrentDescriptionTrackPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/line_of_text_low</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTextLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ConstraintMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black_m</item>
    </style>

    <style name="InputLayoutPlaylist" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlayerButtonsAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_top_height</item>
    </style>

    <style name="PlayerButtAddFavorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_height</item>
    </style>

    <style name="PlayerPlaybackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_play</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MediaTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_m</item>
        <item name="tabRippleColor">@color/grey_i</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextTabStyle</item>
    </style>

    <style name="TextTabStyle">
        <item name="android:textSize">@dimen/line_of_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavMenu">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text</item>
        <item name="android:background">@color/black_m</item>
        <item name="menu">@menu/nav_bottom_menu</item>
    </style>

    <style name="TextPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_high</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/very_high_text</item>
    </style>

</resources>