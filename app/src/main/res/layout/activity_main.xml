<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLinearLayout"
    tools:context=".MainActivity">

    <TextView
        style="@style/StyleMainTitle"
        android:text="@string/app_name"/>

    <Button
        style="@style/StyleMainButton"
        android:id="@+id/search_button"
        android:text="@string/search"
        app:icon="@drawable/search_24x24"/>

    <Button
        style="@style/StyleMainButton"
        android:id="@+id/media_button"
        android:text="@string/button_media"
        app:icon="@drawable/media_24x24"/>

    <Button
        style="@style/StyleMainButton"
        android:id="@+id/settings_button"
        android:text="@string/button_settings"
        app:icon="@drawable/settings_24x24"
        />

</LinearLayout>