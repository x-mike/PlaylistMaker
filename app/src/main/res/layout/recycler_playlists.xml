<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/item_margin_veryLow"
    android:layout_marginEnd="@dimen/item_margin_veryLow"
    android:layout_marginBottom="@dimen/item_marginBottom_low"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/reclr_plst_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        tools:src="@drawable/placeholder_45x45"/>

    <TextView
        style="@style/PlaylistStringInRecycler"
        android:id="@+id/reclr_plst_name"
        app:layout_constraintTop_toBottomOf="@+id/reclr_plst_image"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="My loved songs"/>

    <TextView
        style="@style/PlaylistStringInRecycler"
        android:id="@+id/reclr_plst_tracks"
        app:layout_constraintTop_toBottomOf="@+id/reclr_plst_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="140 треков"/>

</androidx.constraintlayout.widget.ConstraintLayout>