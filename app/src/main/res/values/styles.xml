<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="MenuLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStart">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyleToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_screen</item>
        <item name="android:fontWeight">@dimen/weight_main_menu_text</item>
    </style>

    <style name="StyleSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:fontWeight">@dimen/weight_menu_text</item>
    </style>

    <style name="StyleBackButton">
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="icon">@drawable/backarrow_24x24</item>
        <item name="iconTint">@color/black_m</item>
    </style>

    <style name="StyleMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingEnd">@dimen/after_item</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:fontWeight">@dimen/weight_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey_i</item>
    </style>

    <style name="StyleMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:textSize">@dimen/main_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_main_menu_text</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_main</item>
        <item name="iconTint">@color/black_m</item>
    </style>

    <style name="StyleMainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_screen</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_main_menu_text</item>
    </style>

    <style name="StyleFrameLayoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">@dimen/before_item</item>
        <item name="android:layout_marginEnd">@dimen/after_item</item>
        <item name="android:paddingStart">@dimen/padding_item</item>
        <item name="android:paddingEnd">@dimen/padding_item</item>
    </style>

    <style name="StyleEditTextField">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:background">@color/grey_backg_edittext</item>
        <item name="android:textColorHint">@color/grey_i</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>

    </style>

    <style name="StyleEraseTextIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/x_12x12</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:visibility">gone</item>

    </style>

</resources>