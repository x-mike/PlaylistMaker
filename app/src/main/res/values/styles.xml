<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="MenuLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStart">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyleToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/high_text</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
    </style>

    <style name="StyleSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="StyleBackButton">
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="icon">@drawable/backarrow_24x24</item>
        <item name="iconTint">@color/black_m</item>
    </style>

    <style name="StyleMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/before_item</item>
        <item name="android:paddingEnd">@dimen/after_item</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey_i</item>
    </style>

    <style name="StyleMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:textSize">@dimen/high_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_main</item>
        <item name="iconTint">@color/black_m</item>
    </style>

    <style name="StyleMainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/high_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/weight_high_text</item>
    </style>

    <style name="StyleFrameLayoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">@dimen/before_item</item>
        <item name="android:layout_marginEnd">@dimen/after_item</item>
        <item name="android:paddingStart">@dimen/padding_item</item>
        <item name="android:paddingEnd">@dimen/padding_item</item>
    </style>

    <style name="StyleEditTextField">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:background">@color/grey_backg_edittext</item>
        <item name="android:textColorHint">@color/grey_i</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
    </style>

    <style name="StyleEraseTextIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/x_12x12</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="RootLayoutTracksRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/high_view_medium</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageInTracksRecycler">
        <item name="android:layout_width">@dimen/icon_medium_size</item>
        <item name="android:layout_height">@dimen/icon_medium_size</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart_low</item>
        <item name="android:layout_marginTop">@dimen/item_margin_low</item>
        <item name="android:layout_marginBottom">@dimen/item_margin_low</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_low</item>
    </style>

    <style name="TrackNameInTracksRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/item_paddingTop_low</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistNameInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/grey_i</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="ImagePointInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/grey_i</item>
        <item name="android:paddingTop">@dimen/item_paddingTop_VeryLow</item>
        <item name="android:src">@drawable/icpoint_13x13</item>
    </style>

    <style name="TimeInTracksRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey_i</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:fontWeight">@dimen/weight_medium_text</item>
    </style>

    <style name="ArrowInTracksRecycler">
        <item name="android:layout_width">@dimen/icon_small_size</item>
        <item name="android:layout_height">@dimen/icon_small_size</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_medium</item>
        <item name="android:layout_marginEnd">@dimen/item_marginEnd_low</item>
        <item name="android:src">@drawable/arrow_24x24</item>
        <item name="android:tint">@color/grey_i</item>
    </style>

    <style name="TracksRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_high</item>
    </style>

    <style name="LinearLayoutSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="NoFoundImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_found_black</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_veryHigh</item>
    </style>

    <style name="PlaceholderTextSearchActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:layout_marginTop">@dimen/text_placeholder_marginTop</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart_medium</item>
        <item name="android:layout_marginEnd">@dimen/item_marginEnd_medium</item>
    </style>

    <style name="NoConnectImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_connect_black</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_veryHigh</item>
    </style>

    <style name="ButtonMedium" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/black_m</item>
        <item name="cornerRadius">@dimen/radius_button_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_low</item>
        <item name="android:paddingEnd">@dimen/padding_low</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_high</item>
        <item name="android:layout_marginBottom">@dimen/item_marginBottom_low</item>
        <item name="android:textSize">@dimen/button_text_low</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleHistorySearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:layout_marginTop">@dimen/item_marginTop_history_search</item>
    </style>

    <style name="PlayerGuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DescriptionTrackPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/line_of_text_low</item>
        <item name="android:textColor">@color/grey_i</item>
    </style>

    <style name="CurrentDescriptionTrackPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/line_of_text_low</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTextLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_m</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerConstraintMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PlayerButtonsAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_height</item>
    </style>

    <style name="PlayerButtonPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_play</item>
        <item name="android:layout_marginTop">38dp</item>
    </style>


</resources>